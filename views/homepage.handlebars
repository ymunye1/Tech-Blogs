<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/project/{{project.id}}">{{project.name}}</a>
    </h2>
    <p>Created by {{project.user.username}} on {{format_date project.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{project.description}}
    </p>
  </div>
  {{!-- loop over comments --}}
  {{#if project.comments}}
 
    <h3 class="col-md">Comments</h3>
    {{#each project.comments as |comment|}}
    <div class="col-md">
    <p>{{comment.text}} commented by user {{comment.user_id}} on {{format_date comment.date_created}}</p>
    </div>
    {{/each}}
  {{/if}}
</div>
{{/each}}
